/**
 * Firestore Rules for ADM Construction Project Management System
 * Role-Based Access Control with proper rule enforcement
 */

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function getUserRole() {
      return request.auth.token.role;
    }

    function getUserCompanyId() {
      return request.auth.token.companyId;
    }

    function isSuperAdmin() {
      return getUserRole() == 'super_admin';
    }

    function isCompanyAdmin() {
      return getUserRole() == 'company_admin';
    }

    function isCompanyUser() {
      return getUserRole() == 'user';
    }

    function hasCompanyAccess(companyId) {
      return isSignedIn() && (isSuperAdmin() || getUserCompanyId() == companyId);
    }

    // ========== COMPANIES COLLECTION ==========
    match /companies/{companyId} {
      // Super admin can read all
      allow read: if isSuperAdmin();
      // Company admin/user can read their company
      allow read: if hasCompanyAccess(companyId);
      
      // Only super admin can create
      allow create: if isSuperAdmin() && 
                       request.resource.data.name != null;
      
      // Only super admin can update
      allow update: if isSuperAdmin();
      
      // Only super admin can delete
      allow delete: if isSuperAdmin();
    }

    // ========== USERS COLLECTION ==========
    match /users/{userId} {
      // Users can read their own profile
      allow read: if request.auth.uid == userId;
      
      // Company admin can read users in their company
      allow read: if isCompanyAdmin() && 
                     resource.data.companyId == getUserCompanyId();
      
      // Super admin can read all users
      allow read: if isSuperAdmin();
      
      // Company admin can create users in their company
      allow create: if isCompanyAdmin() && 
                       request.resource.data.companyId == getUserCompanyId() &&
                       request.resource.data.role in ['user', 'company_admin'];
      
      // Only super admin can create super_admin
      allow create: if isSuperAdmin() && 
                       request.resource.data.role in ['super_admin', 'company_admin', 'user'];
      
      // Users can update their own profile
      allow update: if request.auth.uid == userId &&
                       !('role' in request.resource.data) && // Cannot change role
                       !('companyId' in request.resource.data); // Cannot change company
      
      // Company admin can update users in their company
      allow update: if isCompanyAdmin() && 
                       resource.data.companyId == getUserCompanyId() &&
                       resource.data.role == 'user'; // Can only edit regular users
      
      // Super admin can update all
      allow update: if isSuperAdmin();
      
      // Company admin and super admin can delete
      allow delete: if (isCompanyAdmin() && resource.data.companyId == getUserCompanyId()) ||
                       isSuperAdmin();
    }

    // ========== PROJECTS COLLECTION ==========
    match /projects/{projectId} {
      // Read: authenticated users in same company
      allow read: if isSignedIn() && hasCompanyAccess(resource.data.companyId);
      
      // Create: company admin and users in same company
      allow create: if isSignedIn() &&
                       hasCompanyAccess(request.resource.data.companyId) &&
                       (isCompanyAdmin() || isCompanyUser());
      
      // Update: same company access
      allow update: if isSignedIn() &&
                       hasCompanyAccess(resource.data.companyId) &&
                       (isCompanyAdmin() || 
                        request.auth.uid == resource.data.createdBy);
      
      // Delete: company admin or project owner
      allow delete: if isCompanyAdmin() && 
                       hasCompanyAccess(resource.data.companyId);

      // ========== PROJECT SUBCOLLECTIONS ==========
      match /logs/{logId} {
        allow read: if isSignedIn() && hasCompanyAccess(get(/databases/$(database)/documents/projects/$(projectId)).data.companyId);
        allow create: if isSignedIn() && hasCompanyAccess(get(/databases/$(database)/documents/projects/$(projectId)).data.companyId);
        allow update: if isSignedIn();
        allow delete: if isSignedIn();
      }

      match /stocks/{stockId} {
        allow read: if isSignedIn() && hasCompanyAccess(get(/databases/$(database)/documents/projects/$(projectId)).data.companyId);
        allow create: if isSignedIn() && hasCompanyAccess(get(/databases/$(database)/documents/projects/$(projectId)).data.companyId);
        allow update: if isSignedIn();
        allow delete: if isSignedIn();
      }

      match /payments/{paymentId} {
        allow read: if isSignedIn() && hasCompanyAccess(get(/databases/$(database)/documents/projects/$(projectId)).data.companyId);
        allow create: if isSignedIn() && hasCompanyAccess(get(/databases/$(database)/documents/projects/$(projectId)).data.companyId);
        allow update: if isSignedIn();
        allow delete: if isSignedIn();
      }

      match /uploads/{uploadId} {
        allow read: if isSignedIn() && hasCompanyAccess(get(/databases/$(database)/documents/projects/$(projectId)).data.companyId);
        allow create: if isSignedIn() && hasCompanyAccess(get(/databases/$(database)/documents/projects/$(projectId)).data.companyId);
        allow delete: if isSignedIn();
      }
    }

    // ========== AUDIT LOGS ==========
    match /audit_logs/{auditId} {
      allow read: if (isCompanyAdmin() && resource.data.companyId == getUserCompanyId()) ||
                     isSuperAdmin();
      allow write: if isSignedIn();
    }

    // ========== DEFAULT: DENY ALL ==========
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

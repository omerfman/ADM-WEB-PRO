# Örnek: FIREBASE_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"...", ...}'
FIREBASE_SERVICE_ACCOUNT_KEY=

# Firebase Database URL
FIREBASE_DATABASE_URL=https://adm-construction.firebaseio.com
